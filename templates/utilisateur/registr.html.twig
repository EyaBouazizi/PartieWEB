    <title>SB Admin 2 - Login</title>

    <!-- Custom fonts for this template-->
    <link href="{{ asset('assets/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="{{ asset('assets/css/sb-admin-2.min.css') }}" rel="stylesheet">

</head>
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            <form class="-align-center" method="post">


                                {{ form_start(form) }}
                                <label for="inputText" class="col-sm-4 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}
                                </div>


                                <label for="inputText" class="col-sm-4 col-form-label">Nom Utilisateur</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.username,{'attr':{'class':'text-danger'}}) }}
                                </div>


                                <label for="inputText" class="col-sm-4 col-form-label">Mot de Passe</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.password,{'attr':{'class':'text-danger'}}) }}
                                </div>

                                <label for="inputText" class="col-sm-4 col-form-label">Nom et Prenom</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.nomPrenom,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.nomPrenom,{'attr':{'class':'text-danger'}}) }}
                                </div>
                                <label for="age" class="col-sm-4 col-form-label">Date de Naissance</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.age,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.age,{'attr':{'class':'text-danger'}}) }}
                                </div>

                                <div class="col-sm-10">
                                    {{ form_widget(form.type,{'value' : 'user'}) }}


                                </div>

                                <br>
                                <div class="col-sm-10"
                                     style="display: flex;align-items: initial;justify-content: center">

                                    {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
                                </div>
                                {{ form_end(form) }}
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/reset-password">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/utilisateur/create">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
