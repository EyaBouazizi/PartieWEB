{% extends 'base.html.twig' %}


{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Infos Utilisateur</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0"
                                   role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <tbody>
                                <tr>
                                    <th>ID</th>
                                    <td>{{ utilisateur.idUser }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ utilisateur.email }}</td>
                                </tr>
                                <tr>
                                    <th>Username</th>
                                    <td>{{ utilisateur.username }}</td>
                                </tr>
                                <tr>
                                    <th>Password</th>
                                    <td>{{ utilisateur.password }}</td>
                                </tr>
                                <tr>
                                    <th>Nom et Prenom</th>
                                    <td>{{ utilisateur.nomPrenom }}</td>
                                </tr>
                                <tr>
                                    <th>Date de Naissance</th>
                                    <td>{{ utilisateur.age ? utilisateur.age|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ utilisateur.type }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('app_utilisateur_index') }}">back to list</a>

                            <a href="{{ path('app_utilisateur_edit', {'idUser': utilisateur.idUser}) }}">edit</a>

                            {{ include('utilisateur/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
